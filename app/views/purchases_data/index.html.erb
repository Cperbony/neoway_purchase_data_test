
<html>
  <head>
    <meta charset="utf-8"/>
  </head>
  <body>
      <div class='container-fluid'>
        <div class='row py-3 px-3'>
          <div class='col-12 col-sm-8'>
            <h3 class=''>Purchase Data Neoway</h3>
            <table id='data-table' class="table table-hover">
              <thead  class="thead-light">
                <tr>
                  <th>CPF</th>
                  <th>Private</th>
                  <th>Incompleto</th>
                  <th>Data da Última Compra</th>
                  <th>Ticket Médio</th>
                  <th>Ticket da Última Compra</th>
                  <th>Loja Mais Frequente</th>
                  <th>Loja da Última Compra</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
      
              <tbody>
                <%  @data_purchases.each do |data| %>
                  <tr>
                    <td><%= data&.cpf %></td>
                    <td><%= data&.private_purchase %></td>
                    <td><%= data&.incomplete %></td>
                    <td><%= data&.date_of_last_purchase&.to_date %></td>
                    <td><%= data&.average_ticket.to_i %></td>
                    <td><%= data&.last_purchase_ticket.to_i %></td>
                    <td><%= data&.most_frequent_store %></td>
                    <td><%= data&.last_purchase_store %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <br>
          </div>
        </div>
            <%= paginate @data_purchases %> 
      </div>
  </body>
</html>